@model Subdivisionary.Models.ContactInfo

<div class="form-group row">
    @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control col-sm-10", placeholder = "Joe Smith"})
</div>

<div class="form-group row">
    @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-sm-10", placeholder = "joe@something.com" })
</div>

<div class="form-group row">
    @Html.LabelFor(m => m.Phone, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control col-sm-10", placeholder = "###-###-####" })
</div>
<div class="form-group row">
    @Html.LabelFor(m => m.AddressLine1, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control col-sm-10", placeholder = "1155 Market Street" })
</div>
<div class="form-group row">

    @Html.LabelFor(m => m.AddressLine2, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control col-sm-10", placeholder = "3rd Floor" })
</div>
<div class="form-group  row">

    @Html.LabelFor(m => m.City, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.City, new { @class = "form-control col-sm-10", placeholder = @Html.DisplayNameFor(m => m.City)})
</div>
<div class="form-group  row">

    @Html.LabelFor(m => m.State, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.State, new { @class = "form-control col-sm-10", placeholder = @Html.DisplayNameFor(m => m.State) })
</div>
<div class="form-group  row">

    @Html.LabelFor(m => m.Zip, new { @class = "col-sm-2 col-form-label" })
    @Html.TextBoxFor(m => m.Zip, new { @class = "form-control col-sm-10", placeholder = @Html.DisplayNameFor(m => m.Zip) })
</div>
