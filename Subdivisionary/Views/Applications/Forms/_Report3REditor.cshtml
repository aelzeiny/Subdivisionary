@using Subdivisionary.Models.Forms
@using Subdivisionary.ViewModels
@model Subdivisionary.Models.Forms.Report3R
    

<p><strong>Note: </strong> Please upload a valid 3R Report dated within a year of issuance</p>


<div class="form-group col-xs-12 col-sm-6">
    @Html.LabelFor(m => m.FamilyDwellingSize, new { @class = "control-label" })
    @Html.EditorFor(m => m.FamilyDwellingSize, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.FamilyDwellingSize)
</div>
<div class="form-group col-xs-12 col-sm-6">
    @Html.LabelFor(m => m.Report3RIssuedDate, new { @class = "control-label" })
    @Html.EditorFor(m => m.Report3RIssuedDate, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Report3RIssuedDate)
</div>
<a href="@Report3R.SAMPLE_REPORT3R_URL"><h6>View Sample 3R Report <i class="fa fa-file-pdf-o"></i></h6></a>
@Html.Partial("_FileUploadPropsEditor", new FileUploadViewModel()
{
    LabelMessage = "Upload 3R Report",
    UploadList = Model.FileUploads,
    UploadProperty = Model.GetFileUploadInfo(Report3R.REPORT3R_KEY)
})